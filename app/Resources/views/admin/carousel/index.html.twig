{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'admin.page.title.carousel' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                {% include 'inc/flash.message.html.twig' %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="panel-body">
                    <a href="{{ url('carousel.form') }}" class="btn btn-outline btn-default" style="background-color: #f5f5f5;">{{ 'admin.page.form.carousel.add' | trans | upper  }}</a>
                    <br>
                    <br>
                    <br>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>{{ 'admin.page.form.carousel.table.id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.carousel.table.image' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.carousel.table.portfolioId' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.carousel.table.action' | trans | capitalize }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for carousel in carousels%}
                            <tr>
                                <th scope="row">{{ carousel.id}}</th>
                                <td><img src="{{ asset("img/carousel/"~carousel.image) }}" alt="" style="width: 30px; height: 30px"/> {{ carousel.image }}</td>
                                <td>{{ carousel.portfolio.id}}</td>
                                <th>
                                    <a href="{{ url('carousel.update', { 'id' : carousel.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="{{ url('carousel.delete', { 'id' : carousel.id}) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
