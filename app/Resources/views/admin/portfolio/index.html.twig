{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'admin.page.title.portfolio' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                {% include 'inc/flash.message.html.twig' %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="panel-body">
                    <a href="{{ url('portfolio.form') }}" class="btn btn-outline btn-default" style="background-color: #f5f5f5;">{{ 'admin.page.form.portfolio.add' | trans | upper  }}</a>
                    <br>
                    <br>
                    <br>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>{{ 'admin.page.form.portfolio.table.id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.name' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.customer' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.website' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.date_begin' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.date_end' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.description' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.category_id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.skill_id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.portfolio.table.action' | trans | capitalize }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for portfolio in portfolios %}
                            <tr>
                                <th scope="row">{{ portfolio.id }}</th>
                                <td>{{ portfolio.translations[app.request.locale].name | capitalize}}</td>
                                <td>{{ portfolio.customer}}</td>
                                <td>{{ portfolio.website}}</td>
                                <td>{{ portfolio.dateBegin | date('m-Y')}}</td>
                                <td>{{ portfolio.dateEnd | date('m-Y')}}</td>
                                <td>{{ portfolio.translations[app.request.locale].description | capitalize}}</td>
                                <td>{{ portfolio.category.id}}</td>

                                <td>
                                    <ul class="list-group">
                                        {% for skill in portfolio.skills %}
                                            <li class="list-group-item">{{ skill.id}}</li>
                                        {% endfor %}

                                    </ul>
                                </td>
                                <th>
                                    <a href="{{ url('portfolio.update', { 'id' : portfolio.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="{{ url('portfolio.delete', { 'id' : portfolio.id }) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}