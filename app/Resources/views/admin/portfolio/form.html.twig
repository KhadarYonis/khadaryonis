{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-8">
                <h1 class="page-header">{{ 'admin.page.title.portfolio' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row fr-view">
            <div class="col-lg-8">
                <div class="panel-body">
                    {{ form_start(form, {'attr': { 'novalidate': 'novalidate' } } ) }}

                    <p>
                        {{ form_label(form.customer, 'admin.page.form.portfolio.new_portfolio.customer' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.customer, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.customer' | trans | capitalize
                        }})}}
                        {{ form_errors(form.customer) }}
                    </p>

                    <p>
                        {{ form_label(form.dateBegin, 'admin.page.form.portfolio.new_portfolio.date_begin' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.dateBegin) }}
                        {{ form_errors(form.dateBegin) }}
                    </p>

                    <p>
                        {{ form_label(form.dateEnd, 'admin.page.form.portfolio.new_portfolio.date_end' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.dateEnd) }}
                        {{ form_errors(form.dateEnd) }}
                    </p>


                    <p>
                        {{ form_label(form.website, 'admin.page.form.portfolio.new_portfolio.website' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.website, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.website' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.website) }}
                    </p>

                    <p>
                        {{ form_label(form.skills, 'admin.page.form.portfolio.new_portfolio.skills' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.skills, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.skills' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.skills) }}
                    </p>

                    <p>
                        {{ form_label(form.category, 'admin.page.form.portfolio.new_portfolio.category' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.category, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.category' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.category) }}
                    </p>


                    <p>
                        {{ form_label(form.name_fr, 'admin.page.form.portfolio.new_portfolio.name_fr' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.name_fr, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.name_fr' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.name_fr) }}
                    </p>

                    <p>
                        {{ form_label(form.description_fr, 'admin.page.form.portfolio.new_portfolio.description_fr' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.description_fr, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.description_fr' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.description_fr) }}
                    </p>


                    <p>
                        {{ form_label(form.name_en, 'admin.page.form.portfolio.new_portfolio.name_en' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.name_en, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.name_en' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.name_en) }}
                    </p>

                    <p>
                        {{ form_label(form.description_en, 'admin.page.form.portfolio.new_portfolio.description_en' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.description_en, { 'attr' : {
                            'placeholder' : 'admin.page.form.portfolio.new_portfolio.placeholder.description_en' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.description_en) }}
                    </p>


                    <p>
                        <input type="submit" name="submit" value="ADD" class="btn btn-info">
                    </p>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script>

        $('.js-datepicker').datepicker({
            format: 'yyyy-mm-dd'
        });
    </script>
{% endblock %}
