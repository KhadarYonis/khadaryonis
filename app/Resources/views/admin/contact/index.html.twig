{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'admin.page.title.contact' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>


        <div class="row">
            <div class="col-lg-12">
                {% include 'inc/flash.message.html.twig' %}
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <a href="{{ url('contact.form') }}" class="btn btn-outline btn-default" style="background-color: #f5f5f5;">{{ 'admin.page.form.contact.add' | trans | upper  }}</a>
                    <br>
                    <br>
                    <br>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>{{ 'admin.page.form.contact.table.id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.contact.table.first_name' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.contact.table.last_name' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.contact.table.email' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.contact.table.phone' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.contact.table.description_small' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.contact.table.action' | trans | capitalize }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <th scope="row">{{ contact.id}}</th>
                                <td>{{ contact.firstName }}</td>
                                <td>{{ contact.lastName }}</td>
                                <td>{{ contact.email }}</td>
                                <td>{{ contact.phone }}</td>
                                <td>{{ contact.translations[app.request.locale].descriptionSmall }}</td>
                                <th>
                                    <a href="{{ url('contact.update', { 'id' : contact.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="{{ url('contact.delete', { 'id' : contact.id }) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
