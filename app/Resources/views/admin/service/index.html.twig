{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'admin.page.title.services' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                {% include 'inc/flash.message.html.twig' %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="panel-body">
                    <a href="{{ url('service.form') }}" class="btn btn-outline btn-default" style="background-color: #f5f5f5;">{{ 'admin.page.form.service.add' | trans | upper  }}</a>
                    <br>
                    <br>
                    <br>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>{{ 'admin.page.form.service.table.id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.service.table.name' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.service.table.description' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.service.table.image' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.service.table.action' | trans | capitalize }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for service in services %}
                            <tr>
                                <th scope="row">{{ service.id}}</th>
                                <td>{{ service.translations[app.request.locale].name }}</td>
                                <td>{{ service.translations[app.request.locale].description }}</td>
                                <td><img src="{{ asset("img/service/"~service.image) }}" alt="{{ service.translations[app.request.locale].name}}" style="width: 30px; height: 30px"/> {{ service.image }}</td>
                                <th>
                                    <a href="{{ url('service.update', { 'id' : service.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="{{ url('service.delete', { 'id' : service.id}) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
