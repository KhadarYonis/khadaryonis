{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'admin.page.title.items.categories' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                {% include 'inc/flash.message.html.twig' %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="panel-body">
                    <a href="{{ url('category.form') }}" class="btn btn-outline btn-default" style="background-color: #f5f5f5;">{{ 'admin.page.form.category.add' | trans | upper  }}</a>
                    <br>
                    <br>
                    <br>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example"">
                    <thead>
                        <tr>
                            <th>{{ 'admin.page.form.category.table.id' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.category.table.name' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.category.table.description' | trans | capitalize }}</th>
                            <th>{{ 'admin.page.form.category.table.action' | trans | capitalize }}</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for category in catagories %}
                            <tr>
                                <th scope="row">{{ category.id }}</th>
                                <td>{{ category.translations[app.request.locale].name | capitalize}}</td>
                                <td>{{ category.translations[app.request.locale].description | capitalize}}</td>
                                <th>
                                    <a href="{{ url('category.update', { 'id' : category.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="{{ url('category.delete', { 'id' : category.id }) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}


