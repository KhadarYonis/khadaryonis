{% extends 'admin/base.admin.html.twig' %}

{% block body %}
    <div id="page-wrapper" style="min-height: 602px;">

        <div class="row">
            <div class="col-lg-6">
                <h1 class="page-header">{{ 'admin.page.title.items.items' | trans | capitalize }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="panel-body">
                    {{ form_start(form, {'attr': { 'novalidate': 'novalidate' } } ) }}

                    <p>
                        {{ form_label(form.image, 'admin.page.form.item.new_item.image' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.image)}}
                        {{ form_errors(form.image) }}
                    </p>

                    <p>
                        {{ form_label(form.dateCreate, 'admin.page.form.item.new_item.date_create' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.dateCreate, { 'attr' : {
                            'placeholder' : 'admin.page.form.item.new_item.placeholder.date_create' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.dateCreate) }}
                    </p>

                    <p>
                        {{ form_label(form.modified, 'admin.page.form.item.new_item.modified' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.modified, { 'attr' : {
                            'placeholder' : 'admin.page.form.item.new_item.placeholder.modified' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.modified) }}
                    </p>

                    <p>
                        {{ form_label(form.author, 'admin.page.form.item.new_item.author' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.author, { 'attr' : {
                            'placeholder' : 'admin.page.form.item.new_item.placeholder.author' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.author) }}
                    </p>

                    <p>
                        {{ form_label(form.skills, 'admin.page.form.item.new_item.skills' | trans | capitalize ~ ' :') }}
