                            'placeholder' : 'admin.page.form.item.new_item.placeholder.description_fr' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.description_fr) }}
                    </p>


                    <p>
                        {{ form_label(form.name_en, 'admin.page.form.item.new_item.name_en' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.name_en, { 'attr' : {
                            'placeholder' : 'admin.page.form.item.new_item.placeholder.name_en' | trans | capitalize
                        }}) }}
                        {{ form_errors(form.name_en) }}
                    </p>

                    <p>
                        {{ form_label(form.description_en, 'admin.page.form.item.new_item.description_en' | trans | capitalize ~ ' :') }}
                        {{ form_widget(form.description_en, { 'attr' : {
                            'placeholder' : 'admin.page.form.item.new_item.placeholder.description_en' | trans | capitalize
                        }}) }}
