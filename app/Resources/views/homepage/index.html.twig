{% extends 'base.html.twig' %}

{% block body %}

    <!-- Home Subpage -->
    <section class="pt-page-1 section-with-bg section-paddings-0">
        <div class="home-page-block-bg">
            <div class="mask"></div>
        </div>
        <div class="home-page-block">
            <div class="v-align">
                {% for contact in contacts %}
                    <h2>{{ contact.firstName | capitalize }} {{ contact.lastName | upper}}</h2>
                {% endfor %}
                <div id="rotate" class="text-rotate">
                    <div>
                        <p class="home-page-description">{{ 'public.page.homepage.back-end' | trans | capitalize }}</p>
                    </div>
                    <div>
                        <p class="home-page-description">{{ 'public.page.homepage.full-stack' | trans | capitalize }}</p>
                    </div>
                </div>

                <div class="block end" style="text-align: center">
                    {% for contact in contacts %}
                        <ul class="info-list">
                            <li><span class="title">{{ 'public.page.homepage.age' | trans | capitalize }}</span><span class="value">{{ contact.age }}</span></li>
                            <li><span class="title">{{ 'public.page.homepage.address' | trans | capitalize }}</span><span class="value"> {{ contact.city}}, {{ contact.region }}, {{ contact.country }}</span></li>
                            <li><span class="title">{{ 'public.page.homepage.e-mail' | trans | capitalize }}</span><span class="value"><a href="mailto:contact@khadaryonis.fr">{{ contact.email }} {{ 'public.page.homepage.or' | trans | upper }} contact@khadaryonis.fr</a></span></li>
                            <li><span class="title">{{ 'public.page.homepage.phone' | trans | capitalize }}</span><span class="value">{{ contact.phone }}</span></li>
                            <li><span class="title">{{ 'public.page.homepage.job' | trans | capitalize }}</span><span class="value available">{{ contact.translations[app.request.locale].job }}</span></li>
                        </ul>
                    {% endfor %}
                </div>
            </div>

        </div>
    </section>
    <!-- End of Home Subpage -->


{% endblock %}



{% block stylesheets %}
    <style type="text/css">
        .pt-page-1 {
            background-image: url(../../asset/images/image_background.jpg);
            background-repeat: no-repeat;
            background-position: center;
            overflow-y: hidden;
            position: fixed;
            position: relative;
            width: 100%;
            height: 100%;
        }

    </style>

{% endblock %}